<html>
    <head>
        <title>Assignments List</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <style>
            ol li{
                margin-bottom: 20px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Assignments List</h2>

                    <table class="table">
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>Job Type</th>
                            <th>Lesson Type</th>
                            <th>Lesson</th>
                            <th>Youtube ID</th>
                            <th>FROM</th>
                            <th>Last Update</th>
                            <th></th>
                        </tr>
                        <% for(let i=0; i < assignmentsTrad.length; i++){ %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= assignmentsTrad[i].ID %></td>
                            <td><%= assignmentsTrad[i].jobType %></td>
                            <td><%= assignmentsTrad[i].type %></td>
                            <td><%= assignmentsTrad[i].lesson %></td>
                            <td><%= assignmentsTrad[i].youtubeID %></td>
                            <td><%= assignmentsTrad[i].from %></td>
                            <td><%= assignmentsTrad[i].listUpdatedAt ? moment(assignmentsTrad[i].listUpdatedAt).format('MMMM Do YYYY, h:mm:ss a') : 'None' %></td>
                            <td><a href="/assignments/<%= assignmentsTrad[i]._id %>">Edit FAQ</a></td>
                        </tr>
                        <% } %>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
