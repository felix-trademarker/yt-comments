    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Assignment Form</h2>

                    <h4>FAQ ITEMS</h4>

                    <% if(assignment.items) { %>
                        <form class="" method="post">
                            <ol id="listItems">
                            <% for(let i=0; i < assignment.items.length; i++) { %>
                                <li class="row">
                                <div class="col-12">
                                    <div class="col-12">
                                        <label style="width:100%;margin-bottom:5px" for="q-<%= i %>">Question: <%= assignment.items[i].question %> <i style="float:right; margin-left:10px" class="btn btn-info suggestBtn" data-cont-id="s-<%= i %>" data-sentence-source="<%= assignment.items[i].question %>">Suggest</i></label>
                                        <label style="display:none;width: 100%;padding: 5px;font-size: 12px;color: #5e5e5e;" id="s-<%= i %>">Please wait, checking library...</label>
                                        <input id="q-<%= i %>" type="text" class="form-control" name="item[<%= i %>][question]" value="<%= assignment.items[i].question %>">
                                    </div>
                                    <div class="col-12">
                                        <label style="width:100%;margin-bottom:5px" for="a-<%= i %>">Answer: <%= assignment.items[i].answer %> <i style="float:right; margin-left:10px" class="btn btn-info suggestBtn" data-cont-id="sa-<%= i %>" data-sentence-source="<%= assignment.items[i].answer %>">Suggest</i></label>
                                        <label style="display:none;width: 100%;padding: 5px;font-size: 12px;color: #5e5e5e;" id="sa-<%= i %>">Please wait, checking library...</label>
                                        <input id="a-<%= i %>" type="text" class="form-control" name="item[<%= i %>][answer]" value="<%= assignment.items[i].answer %>">
                                    </div>
                                </div>

                                <div style="display:none;" class="col-auto">
                                    <input type="button" class="btn btn-danger" value="Remove" onclick="remove(this)">
                                </div>

                                
                                
                                </li>
                            <% } %>
                            </ol>

                            <input type="button" class="btn btn-success" value="Add FAQ +" id="addFaq">

                            <input type="submit" class="btn btn-primary" value="Update FAQ">
                        </form>

                    <% } else { %>
                        <p>Sorry, No items found</p>
                    <% } %>
                </div>
            </div>
        </div>

